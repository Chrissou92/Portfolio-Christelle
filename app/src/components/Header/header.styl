@require "app/styles/charte"

#header
	background: $bg-light
	border-bottom: 1px solid $border-color
	padding: 1em
	text-transform: capitalize
	text-align: center
	position: fixed
	width: 100%

	&-title
		display: inline-block
		font-size: 1.5rem
		letter-spacing: -.04em
		// position: relative

		&::before
			content: ""
			display: block
			background-size: contain
			width: 50px
			height: 50px
			position: absolute
			left: -2em
			top: -0.3em
			z-index: 100

		a
			font-weight: 700
		small
			margin-left: .3em
			color: $text-light
			font-size: .8em
