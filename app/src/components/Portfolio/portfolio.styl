@require "app/styles/charte"

#portfolio
  height: auto
  margin: auto

.portfolio-img
  background-image: url(/images/kelly-sikkema-411622-unsplash.jpg)
  background-position: top
  background-repeat: no-repeat
  background-size: contain
  height: 15em
  padding-top: 25em
  width: 100%
  @media(min-width: 600px)
    background-size: contain
    height: 35em
    padding-top: 2em
    width: 100%
  @media(min-width: 1024px)
    background-size: cover
    height: 45em
    width: 100%

.portfolio-name
  color: grey
  display: flex
  flex-direction: column
  font-size: 2em
  font-weight: bold
  padding-bottom: 2em
  padding-left: 2em
  padding-top: 3em
